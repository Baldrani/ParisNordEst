{
  "name": "Luna",
  "javascripts": [
    "jquery.flexslider-min",
    "jquery.quickfit"
  ],
  "images": [
    {
      "variable": "image",
      "label": "Header image",
      "description": "A transparent background is recommended"
    },
    {
      "variable": "background_image",
      "label": "Background Image",
      "description": "Adds a repeating background image"
    }
  ],
  "fonts": [
    {
      "variable": "font",
      "label": "Font",
      "default": "Verdana"
    }
  ],
  "colors": [
    {
      "variable": "background",
      "label": "Background",
      "default": "#ffffff"
    },
    {
      "variable": "header_background",
      "label": "Header background",
      "default": "#f0f0f0"
    },    
    {
      "variable": "text",
      "label": "Text",
      "default": "#333333"
    },
    {
      "variable": "text_secondary",
      "label": "Text secondary",
      "default": "#999999"
    },
    {
      "variable": "text_tertiary",
      "label": "Text tertiary",
      "default": "#666666"
    },        
    {
      "variable": "links",
      "label": "Links",
      "default": "#333333"
    },
    {
      "variable": "links_rollover",
      "label": "Link rollovers",
      "default": "#888888"
    },
    {
      "variable": "header_text",
      "label": "Header text",
      "default": "#333333"
    },
    {
      "variable": "products_background",
      "label": "Products background",
      "default": "#000000"
    },    
    {
      "variable": "borders",
      "label": "Borders",
      "default": "#e5e5e5"
    }
  ],
  "options": [
    {
      "variable": "featured_products",
      "label": "Featured products",
      "type": "select",
      "options": "1..100",
      "default": 6,
      "description": "The number of products shown on the Home page"
    },
    {
      "variable": "featured_order",
      "label": "Featured products order",
      "type": "select",
      "options": "product_orders",
      "default": "position",
      "description": "The order of products on the Home page"
    },
    {
      "variable": "products_per_page",
      "label": "Products per page",
      "type": "select",
      "options": "1..100",
      "default": 9,
      "description": "The number of products shown at a time on the Products page"
    },
    {
      "variable": "show_inventory_bars",
      "label": "Show inventory bars",
      "type": "boolean",
      "default": false,
      "description": "Shows a product's inventory amounts (when using inventory tracking)",
      "requires": "inventory"
    },
    {
      "variable": "show_search",
      "label": "Show search",
      "type": "boolean",
      "default": false,
      "description": "Shows the product search area"
    },
    {
      "variable": "show_facebook",
      "label": "Show Facebook's Like button",
      "type": "boolean",
      "default": false,
      "description": "Adds a Like button to the Product page"
    },
    {
      "variable": "show_twitter",
      "label": "Show Twitter's Tweet button",
      "type": "boolean",
      "default": false,
      "description": "Adds a Tweet button to the Product page"
    },
    {
      "variable": "show_pinterest",
      "label": "Show Pinterest's Pin It button",
      "type": "boolean",
      "default": false,
      "description": "Adds a Pin It button to the Product page"
    }                 
  ]
  "links": [
    {
      "variable": "facebook_link",
      "label": "Facebook",
      "type": "input",
      "description": "Adds your Facebook link to the site footer"
    },
    {
      "variable": "twitter_link",
      "label": "Twitter",
      "type": "input",
      "description": "Adds your Twitter link to the site footer"
    }        
  ]  
}
